<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bf9b9c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ayalamart.appcliente.Act_Micuenta" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_imgb_fotousuario"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/fotousuarioIV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_moustache"
                android:layout_marginLeft="10dp"
                android:clickable="true" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <AutoCompleteTextView
                    android:id="@+id/mc_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Natasha MartÃ­nez"
                    android:textColor="#ffffffff" >

                    <requestFocus />
                </AutoCompleteTextView>

                <AutoCompleteTextView
                    android:id="@+id/mc_cedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="19242826"
                    android:textColor="#ffffffff" />

                <AutoCompleteTextView
                    android:id="@+id/mc_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="naty@gmail.com"
                    android:textColor="#ffffffff" />

                <AutoCompleteTextView
                    android:id="@+id/mc_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="04123251298"
                    android:textColor="#ffffffff" />

                <AutoCompleteTextView
                    android:id="@+id/mc_numerousuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="1235"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/but_actualizar_micuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B24C4F"
                    android:text="@string/butt_actualizarcuenta_txt"
                    android:textAllCaps="true"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>